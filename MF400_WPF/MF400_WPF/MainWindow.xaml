<Window x:Class="MF400_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MF400_WPF"
        xmlns:WPF="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!-- content omitted for clarity -->

            <Button Content="Button" HorizontalAlignment="Left" Margin="197,181,0,0" VerticalAlignment="Top" Click="Button_Click"/>

            <!-- The main opengl control. -->
            <WPF:OpenGLControl 
              x:Name="openGLControl"
              OpenGLInitialized="OpenGLControl_OpenGLInitialized"  
              Resized="OpenGLControl_Resized" 
              OpenGLDraw="OpenGLControl_OpenGLDraw" />

        </DockPanel>

    </Grid>
</Window>
